  "version": "0.2.0",
  "configurations": [
    {
      "name": "[packager] Debug Android",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "android"
    },
    {
      "name": "[packager] Debug iOS",
      "cwd": "${workspaceFolder}",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios"
    },
    {
      "name": "[react-native] Debug iOS",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn ios",
      "sourceMaps": true
    },
    {
      "name": "[react-native] Debug Android",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn android",
      "sourceMaps": true
    },
    {
      "name": "[react-native] Debug Windows",
      "request": "launch",
      "type": "node-terminal",
      "command": "yarn windows",
      "sourceMaps": true
    }
  ]
}

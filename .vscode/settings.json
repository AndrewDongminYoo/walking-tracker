{
  "editor.detectIndentation": true,
  "editor.guides.indentation": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.indentSize": "tabSize",
  "editor.tabSize": 2,
  "prettier.useTabs": false,
  "xml.completion.autoCloseRemovesContent": false,
  "xml.format.splitAttributes": false,
  "xml.format.spaceBeforeEmptyCloseTag": false,
  "xml.format.preserveAttributeLineBreaks": true,
  "xml.format.preservedNewlines": 1,
  "[xml]": {
    "editor.autoClosingBrackets": "never",
    "editor.trimAutoWhitespace": false,
    "files.trimFinalNewlines": false
  },
  "xml.format.preserveSpace": ["key", "dict", "true", "false", "plist", "array", "string"],
  "conventionalCommits.scopes": ["react", "ios", "android", "docs", "tests"],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "*.lock"
  ],
  "cSpell.words": [
    "androiddebugkey",
    "androidx",
    "armeabi",
    "buildscript",
    "classpath",
    "codegen",
    "commitlint",
    "conventionalcommits",
    "datasources",
    "debuggable",
    "fluentui",
    "hermesc",
    "hmap",
    "hprof",
    "okhttp",
    "pbxuser",
    "perspectivev",
    "postandroid",
    "postios",
    "poststart",
    "preandroid",
    "preios",
    "proguard",
    "squareup",
    "swiperefreshlayout",
    "xccheckout",
    "xcuserdata",
    "xcuserstate"
  ]
}
